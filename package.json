{
    "name": "@ekino/logger",
    "description": "A Lightweight logger that combines debug namespacing capabilities with winston levels and multioutput",
    "homepage": "https://github.com/ekino/node-logger",
    "license": "MIT",
    "version": "2.1.1",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": ["/lib"],
    "tags": ["logger", "lightweight", "namespaces"],
    "repository": {
        "type": "git",
        "url": "https://github.com/ekino/node-logger.git"
    },
    "maintainers": [
        {
            "name": "Ekino"
        }
    ],
    "engines": {
        "node": ">=14"
    },
    "dependencies": {
        "colors": "1.x",
        "prettyoutput": "1.x",
        "uuid": "10.x"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@commitlint/config-conventional": "19.5.0",
        "@types/node": "22.7.7",
        "@types/uuid": "10.0.0",
        "ava": "6.1.3",
        "commitlint": "19.5.0",
        "conventional-changelog": "6.0.0",
        "conventional-changelog-cli": "5.0.0",
        "coveralls": "3.1.1",
        "eslint": "9.13.0",
        "nyc": "17.1.0",
        "prettier": "3.3.3",
        "sinon": "19.0.2",
        "ts-node": "10.9.2",
        "typescript": "5.6.3"
    },
    "scripts": {
        "lint": "biome check --write",
        "check": "biome check",
        "build": "tsc --build tsconfig.lib.json",
        "prepublishOnly": "rm -rf lib && yarn build",
        "test": "ava",
        "test-cover": "nyc ava",
        "coverage": "nyc ava | coveralls",
        "version": "echo ${npm_package_version}",
        "postinstall": "git config core.hooksPath ./.githooks || true"
    },
    "eslintIgnore": ["lib", "examples"],
    "ava": {
        "files": ["test/**/*.js"],
        "extensions": ["js"],
        "require": ["ts-node/register"]
    },
    "nyc": {
        "reporter": ["lcov", "text-lcov"]
    },
    "packageManager": "yarn@4.5.1"
}
