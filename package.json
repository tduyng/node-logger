    "homepage": "https://github.com/ekino/node-logger",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": ["/lib"],
    "tags": [
        "logger",
        "lightweight",
        "namespaces"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ekino/node-logger.git"
    },
    "maintainers": [
        {
            "name": "RaphaÃ«l Benitte"
        },
        {
            "name": "Nadim El-Boustani"
        }
    ],
    "license": "MIT",
    "version": "1.0.0",
    "engines": {
        "node": ">=10.18.0"
    },
    "dependencies": {
        "colors": "1.x",
        "prettyoutput": "1.x",
        "uuid": "8.x"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "8.x",
        "@types/jest": "28.x",
        "@types/node": "18.x",
        "@types/uuid": "8.x",
        "commitlint": "8.x",
        "conventional-changelog-cli": "2.x",
        "coveralls": "3.x",
        "eslint": "6.x",
        "husky": "4.x",
        "jest": "28.x",
        "prettier": "2.x",
        "ts-jest": "28.x",
        "ts-node": "10.x",
        "typescript": "4.x"
    },
    "scripts": {
        "fmt": "prettier --color --write \"{src/**/*,test/**/*}.{js,ts}\" --cache",
        "check-fmt": "prettier --list-different \"{*,test/**/*}.{js,ts}\"",
        "build": "tsc --build tsconfig.lib.json",
        "prepublishOnly": "rm -rf lib && yarn build",
        "test": "jest",
        "test-cover": "jest --coverage",
        "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
        "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s -r 0",
        "version": "echo ${npm_package_version}",
        "lint": "eslint ."
    },
    "eslintIgnore": [
        "lib",
        "examples"
    ]
